    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": ["./Source/doLittle", "--no-restore",  "-f", "netstandard2.0" ],
